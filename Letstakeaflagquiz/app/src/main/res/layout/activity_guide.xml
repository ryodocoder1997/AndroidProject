<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Img_Guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide_page1" />

    <Button
        android:id="@+id/Btn_BackArrow"
        android:layout_width="103dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/custom_back_arrow" />

    <Button
        android:id="@+id/Btn_NextArrow"
        android:layout_width="103dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_next_arrow" />

    <TextView
        android:id="@+id/Txt_Guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textStyle="bold|italic"
        android:textSize="50dp"/>

    <ImageView
        android:id="@+id/Img_GuideContinued"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/guide_page11"
        android:alpha="0.75"/>

</RelativeLayout>